<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Coach.CheckoutDetails">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_innerpage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"
            android:textSize="@dimen/_10sdp"
            android:textColor="#6b6c6f"
            android:fontFamily="@font/opensans_semibold"
            android:text="Fully interactive one-on-one 45-minute online cricket live training session with a coach conducted on Criconetâ€™s platform. For one student only.">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/indicator_selector"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivRoundedProfile"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/coachpic"
                        app:riv_corner_radius="@dimen/_5sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_coachName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="top"
                            android:lineSpacingExtra="-1sp"
                            android:text="Nimesh Sharma"
                            android:textColor="@color/blue_intro_color"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_coachExp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="top"
                            android:text="22 Yrs Experience"
                            android:textColor="@color/blue_intro_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_coachPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="top"
                            android:text="Price: 2,180 INR/ Session"
                            android:textColor="@color/blue_intro_color"
                            android:textSize="@dimen/_10sdp" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:numStars="5"
                            android:rating="5"
                            android:theme="@style/RatingBarRed"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="top"
                            android:text="Session Date"
                            android:textColor="@color/blue_intro_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvSessiondate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="top"
                            android:lineSpacingExtra="-1sp"
                            android:text="June 22, 2023"
                            android:textColor="@color/blue_intro_color"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_sessionprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="top"
                            android:text="Price- 28,000 INR"
                            android:textColor="@color/purple_700"
                            android:textSize="@dimen/_10sdp" />
                        <LinearLayout
                            android:id="@+id/tvOfferl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/offer_price"
                                android:visibility="gone"
                                android:textColor="@color/indicator_selector"
                                android:textSize="@dimen/_8sdp"
                                app:fontFamily="@font/opensans_semibold" />

                            <TextView
                                android:id="@+id/tvOfferP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/blue_intro_color"
                                android:textSize="@dimen/_9sdp"
                                app:fontFamily="@font/opensans_semibold" />
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="top"
                        android:text="Session Time"
                        android:textColor="@color/blue_intro_color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvSessionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="top"
                        android:lineSpacingExtra="-1sp"
                        android:text="06:00 pm - 08:00pm"
                        android:textColor="@color/blue_intro_color"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCouponDis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="bsa"
                        android:visibility="gone"
                        android:textColor="@color/blue_intro_color"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/tvSubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="top"
                        android:text="Subtotal- 2,800 INR"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvTaxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="top"
                        android:text="Taxes- 504 INR"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlApplycoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutapply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/fl_coupon_submit">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_apply_coupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:fontFamily="@font/opensans_semibold"
                            android:hint="Apply Coupon"
                            android:textColor="@color/blue_intro_color"
                            android:textSize="@dimen/_10sdp">

                        </com.google.android.material.textfield.TextInputEditText>

                    </com.google.android.material.textfield.TextInputLayout>
                    <FrameLayout
                        android:id="@+id/fl_coupon_submit"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_15sdp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_bg_top" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:src="@drawable/button_bg_bottom" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@drawable/button_bg"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_semibold"
                            android:lineHeight="@dimen/_27sdp"
                            android:text="@string/submit"
                            android:textAppearance="@style/register" />

                    </FrameLayout>
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/fl_coupon_remove"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_15sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg_top" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:src="@drawable/button_bg_bottom" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/button_bg"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineHeight="@dimen/_27sdp"
                        android:text="@string/remove_coupon"
                        android:textAppearance="@style/register" />

                </FrameLayout>


                <TextView
                    android:id="@+id/tvTotalPayableAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="top"
                    android:lineSpacingExtra="-1sp"
                    android:text="Total- 3,304 INR"
                    android:textColor="@color/blue_intro_color"
                    android:textSize="@dimen/_12sdp" />

                <FrameLayout
                    android:id="@+id/fl_proceed_toPay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_15sdp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg_top" />

                    <ImageView
                        android:id="@+id/vector1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:src="@drawable/button_bg_bottom" />

                    <ImageView
                        android:id="@+id/vector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/button_bg"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/get_started"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_semibold"
                        android:lineHeight="@dimen/_27sdp"
                        android:text="@string/proceed_to_pay"
                        android:textAppearance="@style/register" />

                </FrameLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <include
        android:id="@+id/booking_con_layout"
        layout="@layout/booking_confirm_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    <include
        android:id="@+id/booking_failed_layout"
        layout="@layout/booking_failed_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</RelativeLayout>