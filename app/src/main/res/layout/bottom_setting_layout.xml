<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/button_bg_top"
        android:backgroundTint="@color/dimGray"/>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/share"
        android:drawableTint="@color/dimGray"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical|left"
        android:padding="@dimen/_10sdp"
        android:text="@string/share_via"
        android:textColor="@color/dimGray"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableTint="@color/dimGray"
        android:drawableLeft="@drawable/flag_black_24dp"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical|left"
        android:padding="@dimen/_10sdp"
        android:text="@string/report_comment"
        android:visibility="gone"
        android:textColor="@color/dimGray"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_editReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/ic_edit_black_24dp"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/opensans_bold"
        android:drawableTint="@color/dimGray"
        android:gravity="center_vertical|left"
        android:padding="@dimen/_10sdp"
        android:text="@string/editReply"
        android:textColor="@color/dimGray"
        android:textSize="@dimen/_10sdp" />
    <TextView
        android:id="@+id/tv_deleteReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableTint="@color/dimGray"
        android:drawableLeft="@drawable/ic_delete_black_24dp"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical|left"
        android:padding="@dimen/_10sdp"
        android:text="@string/deleteReply"
        android:textColor="@color/dimGray"
        android:textSize="@dimen/_10sdp" />

</LinearLayout>