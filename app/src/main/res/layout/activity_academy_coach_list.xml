<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_intro_color"
    tools:context=".CommonUI.AddTrainingTipsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_innerpage"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAcademyCoach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/tvnotfound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/indicator_selector"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/notfound"/>
    </RelativeLayout>


</RelativeLayout>