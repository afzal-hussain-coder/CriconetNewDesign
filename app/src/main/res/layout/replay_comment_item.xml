<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear_above_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/profile_avatart"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/comment_bg"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Pooja Singh"
                        android:textSize="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/li_end"
                        android:textColor="@color/dimGray"
                        android:fontFamily="@font/opensans_regular" />

                    <LinearLayout
                        android:id="@+id/li_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_session_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_8sdp"
                            android:text="2h"
                            android:gravity="center_vertical"
                            android:textColorLink="@color/dimGray"
                            android:autoLink="all"
                            android:visibility="visible"
                            android:fontFamily="@font/opensans_semibold"
                            />

                        <ImageButton
                            android:id="@+id/ib_setting_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingLeft="@dimen/_5sdp"
                            android:src="@drawable/more_vert_black_24dp"
                            app:tint="@color/dimGray">

                        </ImageButton>
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_commented"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:layout_alignParentStart="true"
                    android:text="Hi Vishakha ,How are you?"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans_semibold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_Like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:text="@string/Like"
                    android:textSize="@dimen/_8sdp"
                    android:layout_toLeftOf="@+id/li_end"
                    android:textColor="@color/dimGray"
                    android:fontFamily="@font/opensans_bold" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/like_image"
                        app:tint="@color/blue">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_LikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_8sdp"
                        android:layout_toLeftOf="@+id/li_end"
                        android:textColor="@color/dimGray"
                        android:fontFamily="@font/opensans_bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_replay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reply"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_8sdp"
                        android:layout_toLeftOf="@+id/li_end"
                        android:textColor="@color/dimGray"
                        android:fontFamily="@font/opensans_bold" />
                    <TextView
                        android:id="@+id/tv_replayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_8sdp"
                        android:layout_toLeftOf="@+id/li_end"
                        android:textColor="@color/dimGray"
                        android:fontFamily="@font/opensans_bold" />
                </LinearLayout>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_replaycomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>