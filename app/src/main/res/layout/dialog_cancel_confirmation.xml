<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/layout_enter_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/canvas_theme"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:visibility="visible">


        <TextView
            android:id="@+id/tv_cancel_confirmed_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:padding="@dimen/_10sdp"
            android:text="@string/alert_cancel_booking"
            android:textColor="@color/blue_intro_color"
            android:textSize="@dimen/_12sdp"
            app:fontFamily="@font/opensans_regular" />


        <FrameLayout
            android:id="@+id/fl_done"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg_top" />

            <ImageView
                android:id="@+id/vector1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_13sdp"
                android:src="@drawable/button_bg_bottom" />

            <ImageView
                android:id="@+id/vector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@drawable/button_bg"
                android:visibility="visible" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:lineHeight="@dimen/_27sdp"
                android:text="@string/done"
                android:textAppearance="@style/register" />

        </FrameLayout>


    </LinearLayout>

</RelativeLayout>